{
  "manifest_version": 3,
  "name": "Github PR-Scribe-AI",
  "description": "Enhance your GitHub workflow with AI-generated pull request titles and descriptions using OpenAI GPT or Google Gemini models.",
  "version": "1.5.1",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": [
    "https://github.com/*",
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon_16x16.png",
      "32": "icons/icon_32x32.png",
      "48": "icons/icon_48x48.png",
      "128": "icons/icon_128x128.png",
      "256": "icons/icon_256x256.png",
      "512": "icons/icon_512x512.png"
    }
  },
  "icons": {
    "16": "icons/icon_16x16.png",
    "32": "icons/icon_32x32.png",
    "48": "icons/icon_48x48.png",
    "128": "icons/icon_128x128.png",
    "256": "icons/icon_256x256.png",
    "512": "icons/icon_512x512.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*/*/compare/*"],
      "js": ["content.js"]
    }
  ]
}
